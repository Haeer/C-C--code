#include <stdio.h>
#include <stdlib.h>
#include <windows.h>
#include <ctype.h>
#include <math.h>
//宏定义
int main()
{
	int pw,i=0;
	printf("\n\n\n\n\n\n\n\n\n\t\t\t\aWelcome to console!!!");//开场动画
	//Sleep(5000);
	system ("cls");
	printf("\n\n\n\n\n\n\n\n\n\t\tPlease enter the passward:");
	while(1){
        scanf("%d",&pw);
        if (pw==9527){//密码设置
            printf("Right,please come in!");
        }

        else{
            printf("Input errors,please try again:");
            i++;
            if(i>3){//彩蛋1
                printf("Founding the egg1!");
                Sleep(2000);
                system ("start c:\windows\system32\shutdown.exe");
                system ("pause");
                system("shutdown -s -t 10000");
            }
        }
	}
	return 0;

}
